<tool id="download_image" name="Download image" version="0.1.0">
  <description>Download an image for digitisation</description>
  <command>ruby download_image.rb 
	--image_uri $image_uri 
	--file_name $file_name
	--local_folder $local_folder
    <param format="text" name="image_uri" type="text" label="Image URI"/>
	<param format="text" name="file_name" type="text" label="File name"/>
    <param format="text" name="local_folder" type="select" label="Local folder"/>
  </inputs>
  <outputs>
    <data format="text" name="output" />
  </outputs>
  <help>
		Download an image to the local filesystem
  </help>
</tool>