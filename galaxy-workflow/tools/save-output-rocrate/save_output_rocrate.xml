<tool id="save_output_rocrate" name="Save as RO Crate" version="0.1.0">
  <description>Saves the output of a digitisation to disk as an RO Crate</description>
  <command>
    <![CDATA[
      rocrate init -c /srv/galaxy/server/results/'$batch_id' &&
      zip -r sdr-output.zip /srv/galaxy/server/results/'$batch_id' > '$output'
    ]]>
  </command>
  <inputs>
    <param format="text" name="batch_id" type="text" label="Batch ID"/>
  </inputs>
  <outputs>
    <data name="rocrate" file="sdr-output.zip"/>
  </outputs>
  <help>
    Saves the output of a digitisation to disk as an RO Crate
  </help>
</tool>
