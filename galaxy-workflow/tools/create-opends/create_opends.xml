<tool id="sdr_create_sdo" name="Create specimen data object" version="0.1.0">
  <description>Create a specimen data object for de novo digitisation</description>
  <command>ruby create_opends.rb'
		-catalog_number $catalog_number
		-image_license $image_license
		-image_uri $image_uri
		-object_type $object_type
		-rights_holder $rights_holder
		-registered_institution_url $registered_institution_url
		-higher_classification $higher_classification
		-person_name $person_name
		-person_identifier $person_identifier
		-output $output
  </command>
  <inputs>
    <param format="txt" name="catalog_number" type="data" label="Catalog number"/>
	<param format="txt" name="image_license" type="data" label="Image license"/>
	<param format="txt" name="image_uri" type="data" label="Image URI"/>
	<param format="txt" name="object_type" type="data" label="Object type"/>
	<param format="txt" name="rights_holder" type="data" label="Rights holder"/>
	<param format="txt" name="registered_institution_url" type="data" label="Registered institution URL"/>
	<param format="txt" name="higher_classification" type="data" label="Higher classification"/>
	<param format="txt" name="person_name" type="data" label="Person name"/>
	<param format="txt" name="person_identifier" type="data" label="Person identifier"/>
  </inputs>
  <outputs>
    <data format="json" name="output" />
  </outputs>
  <help>
		Create a specimen data object for de novo digitisation
  </help>
</tool>